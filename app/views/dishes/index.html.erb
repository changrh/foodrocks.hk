<div id="myCarousel" class="carousel slide" data-ride="carousel">


      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>   
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
      </ol>

      <div id="myCarousel-inner" class="carousel-inner">


        <div class="item active">
          <div class="text-center">
            <%= image_tag(@dishes.first.imageURL)%>
          </div>
          <div class="container">
            <div class="carousel-caption">
            <h1 class="soldOut"></h1>
            <div class="col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6 col-sm-offset-2 col-sm-8">
            <table class="table transbox table-short">
              <tbody>
                <tr>
                    <td><p><%= @dishes.first.name %> @ <%= link_to @dishes.first.restaurant, @dishes.first.restaurantURL, :class=>'a' %></p></td>
                </tr>
                <tr>
                    <td><p><%= @dishes.first.price %> HKD</p></td>
                </tr>

              </tbody>
            </table>


                <p class="reminingDish">仅剩<%=@dishes.first.stock - @dishes.first.orders.size%>份</p>
              <%= link_to '就要这个', @dishes.first, class: "btn btn-lg btn-danger btn-block", role: "button", style: 'color:white;' %>
              </div>
            </div> 
          </div>
        </div>

        <% @dishes.drop(1).each do |dish| %>
          <div class="item">
            <div class="text-center">
            <%= image_tag(dish.imageURL)%>
            </div>
            <div class="container">
              <div class="carousel-caption">
            <div class="col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6 col-sm-offset-2 col-sm-8">
              <table class="table transbox table-short">
                <tbody>
                  <tr>
                      <td><p><%= dish.name %> @ <%= link_to dish.restaurant, dish.restaurantURL%></p></td>
                  </tr>
                  <tr>
                      <td><p><%= dish.price %> HKD</p></td>
                  </tr>

                </tbody>
              </table>

                  <p class="reminingDish">仅剩<%=dish.stock - dish.orders.size %>份</p>
              <%= link_to '就要这个', dish, class: "btn btn-lg btn-danger btn-block", role: "button", style: 'color:white;' %>
              </div>
             

              </div>
            </div>
          </div>
        <% end %>

      </div>
    
      <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
      <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>


    </div><!-- /.carousel -->

    <script>
      checkSoldOut();
    </script>

