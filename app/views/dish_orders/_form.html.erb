<%= form_for([@dish, @dish.orders.build], html:{class: "form-horizontal ", onsubmit: "return validateForm()", id: "registrationForm"}) do |f| %>

<script>
orderPageSoldOut(<%=@dish.orders.size%>);
</script>

  <div class="field">
    <%= f.hidden_field :dish_id %>
  </div>



  <div class="field form-group">
    <!--<%= f.label "手机号码", :class=>'col-sm-5 control-label text-white'%>-->


      <%= f.number_field :phone, :class=>'form-control' , :placeholder=>'您的手机号码'%>

    <div class="col-sm-offset-4 col-sm-4">
    <input type="text" class="form-control" name="phonenumber" />
    </div>
  </div>


<div class="actions col-sm-offset-4 col-sm-4">
<a href="#modal-dialog" class="modal-toggle btn btn-lg btn-danger btn-block" data-toggle="modal"onclick="return getUsrPhone()"><i class="icon-trash"></i>落单</a>
</div>

<!-- onclick="return validateForm()" -->



  <div class="actions col-sm-offset-4 col-sm-1">
    <%= link_to "返回", dishes_path, style: 'color:white;' %>
  </div>

<div id="modal-dialog" class="modal">
  <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
            <a href="#" data-dismiss="modal" aria-hidden="true" class="close">×</a>
            <div class="text-center"><%=image_tag("logoo.jpg")%></div>

        </div>
             <div class="text-center"><h1>确认落单</h1></div>

             <table class="table table-striped">
                <tbody class="table-comfirmed">
                  <tr>
                    <td><p>手机号码</p></td>                    
                    <td><p id="usrPhone"></p></td>
                  </tr>
                  <tr>
                    <td><p>时间</p></td>                    
                    <td><p>正午 12:00</p></td>
                  </tr>
                  <tr>
                    <td><p>地点</p></td> 
                    <td><p>开心公园</p></td>
                  </tr>                  
                  <tr>
                    <td><p>菜品</p></td>
                    <td><p><%= @dish.name %> @ <%= link_to @dish.restaurant, @dish.restaurantURL %></p></td>
                  </tr>
                  <tr>
                    <td><p>价格</p></td> 
                    <td><p><%= @dish.price %> HKD</p></td>
                  </tr>

                </tbody>
            </table>    

        <div class="modal-footer">
          <%= f.submit "确认", :class=>'btn btn-lg btn-danger btn-block'%>
          <a href="#" data-dismiss="modal" aria-hidden="true" class="btn btn-lg btn-default btn-block">返回</a>
        </div>
      </div>
    </div>
</div>  

<script>
$(document).ready(function() {
    $('#registrationForm').bootstrapValidator({
        // To use feedback icons, ensure that you use Bootstrap v3.1.0 or later
        feedbackIcons: {
            valid: 'glyphicon glyphicon-ok',
            invalid: 'glyphicon glyphicon-remove',
            validating: 'glyphicon glyphicon-refresh'
        },
        fields: {
            phonenumber: {
                message: 'The username is not valid',
                validators: {
                    notEmpty: {
                        message: 'The username is required and cannot be empty'
                    },
                    stringLength: {
                        min: 8,
                        max: 8,
                        message: 'The username must be 8 digit'
                    },
                    regexp: {
                        regexp: /^[0-9]+$/,
                        message: 'The phonenumber can only consist of number'
                    }
                }
            }
        }
    });
});
</script>
<% end %>


